.widget
  .heading-title-alt.text-left.heading-border-bottom
    h6.text-uppercase =t(:latest_articles)
  ul.widget-latest-post
    - @latest_articles.each do |article|
      li
        .thumb
          - if article.main_image.present?
            = image_tag article.main_image.url(:thumb)
        .w-desk
          = link_to article.title, article
          = show_time(article.updated_at)
